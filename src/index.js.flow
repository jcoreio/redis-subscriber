// @flow

import type {RedisClient} from 'redis'

type SubCallback = (channel: string, message: any) => any
type PSubCallback = (pattern: string, channel: string, message: any) => any

declare class RedisSubscriber {
  constructor(redis: RedisClient): void;
  subscribe(channel: string, callback: SubCallback): () => void;
  psubscribe(pattern: string, callback: PSubCallback): () => void;
  unsubscribe(channel: string, callback: SubCallback): void;
  punsubscribe(pattern: string, callback: PSubCallback): void;
}

// $FlowFixMe
declare var exports: typeof RedisSubscriber
